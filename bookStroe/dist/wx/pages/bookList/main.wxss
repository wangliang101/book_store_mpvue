
.bookItem {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #eee;
}
.bookItem ._img {
  width: 140rpx;
  height: 140rpx;
}
.bookItem .bookInfo {
  display: flex;
  flex-direction: column;
  max-width: 70%;
  margin-left: 10rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.bookItem .price {
  position: absolute;
  right: 30rpx;
  color: #f00;
  font-size: 32rpx;
  font-weight: bold;
}